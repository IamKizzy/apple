                    <span class="icon-bar"></span>
                </button>
                <div class="dropdown">
                    <button class="dropbtn">
                        @Html.ActionLink("Stronghold", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </button>
                    <div class="dropdown-content">
                        <a>@Html.ActionLink("Home", "Index", "Home")</a>
                        <a>@Html.ActionLink("About", "About", "Home")</a>
                        <a>@Html.ActionLink("Contact", "Contact", "Home")</a>
                    </div>
                </div>
            </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        <li>@Html.ActionLink("Create", "Create", "Home")</li>

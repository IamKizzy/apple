            <input id="txtOth" name="txtOth" type="text" placeholder="OTHERS" />&nbsp;&nbsp;&nbsp;&nbsp;
            <input id="txtDay" name="txtDay" type="text" placeholder="DAY" />&nbsp;&nbsp;&nbsp;&nbsp;

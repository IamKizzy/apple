        $("#txtAddress").attr("disabled", "disabled");
        $("#txtDocs").attr("disabled", "disabled");
        $("#txtTotal").attr("disabled", "disabled");

        $("#txtPlace").attr("disabled", "disabled");
        $("#txtLg").attr("disabled", "disabled");
        $("#txtSum").attr("disabled", "disabled");



        
        $("#mvNum").hide();
        $("#make").hide();
        $("#datepicker1").hide();
        $("#txtPlate").hide();
        $("#txtSeries").hide();
        $("#datepicker2").hide();

        $("#txtMotorNum").hide();
        $("#txtBody").hide();
        $("#datepicker3").hide();

        $("#txtSer").hide();
        $("#txtModelNo").hide();
        $("#txtColor").hide();

        $("#txtOR").hide();
        $("#txtOth").hide();
        $("#txtDay").hide();

        $("#txtCoc").hide();
        $("#txtDoc").hide();
        $("#txtMonth").hide();

        $("#txtPol").hide();
        $("#txtLgt").hide();
        $("#txtYear").hide();

        $("#txtRec").hide();
        $("#txtPrem").hide();
        $("#txtMisc").hide();

        $("#txtAddress").hide();
        $("#txtDocs").hide();
        $("#txtTotal").hide();

        $("#txtPlace").hide();
        $("#txtLg").hide();
        $("#txtSum").hide();


        $("#btnSearch").click(function () {

            
            var mv = $("#mvNumSearch").val();
            alert(mv);
            $.post("../Home/SearchItem", {
                mvNum: mv
            }, function (res) {




                if (res[0].mess != 1) {
                    

                    $("#mvNum").val(res[0].mvNum);
                    $("#make").val(res[0].brand);
                    $("#datepicker1").val(res[0].issued);

                    $("#txtPlate").val(res[0].plate);
                    $("#txtSeries").val(res[0].series);
                    $("#datepicker2").val(res[0].dateFrom);

                    $("#txtMotorNum").val(res[0].motorNum);
                    $("#txtBody").val(res[0].body);
                    $("#datepicker3").val(res[0].dateTo);

                    $("#txtSer").val(res[0].srl);
                    $("#txtModelNo").val(res[0].modelNum);
                    $("#txtColor").val(res[0].color);

                    $("#txtOR").val(res[0].off_Rcpt);
                    $("#txtOth").val(res[0].othr);
                    $("#txtDay").val(res[0].day);

                    $("#txtCoc").val(res[0].cocNum);
                    $("#txtDoc").val(res[0].docs1);
                    $("#txtMonth").val(res[0].mnth);

                    $("#txtPol").val(res[0].polcyNum);
                    $("#txtLgt").val(res[0].lgt);
                    $("#txtYear").val(res[0].year);

                    $("#txtRec").val(res[0].receiveFrom);
                    $("#txtPrem").val(res[0].premiumSales);
                    $("#txtMisc").val(res[0].msc);

                    $("#txtAddress").val(res[0].address);
                    $("#txtDocs").val(res[0].docs2);
                    $("#txtTotal").val(res[0].total);

                    $("#txtPlace").val(res[0].place);
                    $("#txtLg").val(res[0].lg);
                    $("#txtSum").val(res[0].sum);


                    $("#mvNum").show();
                    $("#make").show();
                    $("#datepicker1").show();
                    $("#txtPlate").show();
                    $("#txtSeries").show();
                    $("#datepicker2").show();

                    $("#txtMotorNum").show();
                    $("#txtBody").show();
                    $("#datepicker3").show();

                    $("#txtSer").show();
                    $("#txtModelNo").show();
                    $("#txtColor").show();

                    $("#txtOR").show();
                    $("#txtOth").show();
                    $("#txtDay").show();

                    $("#txtCoc").show();
                    $("#txtDoc").show();
                    $("#txtMonth").show();

                    $("#txtPol").show();
                    $("#txtLgt").show();
                    $("#txtYear").show();

                    $("#txtRec").show();
                    $("#txtPrem").show();
                    $("#txtMisc").show();

                    $("#txtAddress").show();
                    $("#txtDocs").show();
                    $("#txtTotal").show();

                    $("#txtPlace").show();
                    $("#txtLg").show();
                    $("#txtSum").show();

                }
                else {
                    alert('error!');
                }

            });

        });
    });
</script>


<html>
<body>


    <input type="text" id="mvNumSearch" name="mvNum" required />

    <input type="button" id="btnSearch" name="btnSearch" value="Search" />
    <br />
    <br />

    <div id="view" class="view">


        <div>
            <input type="text" id="mvNum" name="mvNum" placeholder="MV NO." />&nbsp;&nbsp;&nbsp;&nbsp;
            <input id="make" name="make" type="text" placeholder="MAKE" />&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="text" name="datepicker1" id="datepicker1" value="@DateTime.Now.ToShortDateString()" />&nbsp;&nbsp;&nbsp;&nbsp;
            <br />
        </div>

        <div>
            <input id="txtPlate" name="txtPlate" type="text" placeholder="PLATE NO." />&nbsp;&nbsp;&nbsp;&nbsp;
            <input id="txtSeries" name="txtSeries" type="text" placeholder="SERIES" />&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="text" name="datepicker2" id="datepicker2" value="@DateTime.Now.ToShortDateString()" />&nbsp;&nbsp;&nbsp;&nbsp;
            <br />

        </div>

        <div>
            <input id="txtMotorNum" name="txtMotorNum" type="text" placeholder="MOTOR NO." />&nbsp;&nbsp;&nbsp;&nbsp;
            <input id="txtBody" name="txtBody" type="text" placeholder="TYPE OF BODY" />&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="text" name="datepicker3" id="datepicker3" value="@DateTime.Now.AddYears(1).ToShortDateString()" />&nbsp;&nbsp;&nbsp;&nbsp;

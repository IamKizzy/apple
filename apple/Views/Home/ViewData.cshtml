            <input id="txtPrem" name="txtPrem" type="text" placeholder="PREMIUM SALES" />&nbsp;&nbsp;&nbsp;&nbsp;
            <input id="txtMisc" name="txtMisc" type="text" placeholder="MISC" />&nbsp;&nbsp;&nbsp;&nbsp;
            <br />
        </div>

        <div>
            <input id="txtAddress" name="txtAddress" type="text" placeholder="ADDRESS" />&nbsp;&nbsp;&nbsp;&nbsp;
            <input id="txtDocs" name="txtDocs" type="text" placeholder="DOC STAMP" />&nbsp;&nbsp;&nbsp;&nbsp;
            <input id="txtTotal" name="txtTotal" type="text" placeholder="TOTAL" />&nbsp;&nbsp;&nbsp;&nbsp;
            <br />
        </div>
        <div>
            <input id="txtPlace" name="txtPlace" type="text" placeholder="PLACE OF ISSUE" />&nbsp;&nbsp;&nbsp;&nbsp;
            <input id="txtLg" name="txtLg" type="text" placeholder="LG TAX" />&nbsp;&nbsp;&nbsp;&nbsp;
            <input id="txtSum" name="txtSum" type="text" placeholder="THE SUM OF PESOS" />&nbsp;&nbsp;&nbsp;&nbsp;

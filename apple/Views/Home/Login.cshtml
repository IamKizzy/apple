
<html>
<body>

    <br />
    <br />
    <br />
    <br />
    <style>

        body {
            padding: 0;
            margin: 0;
            align-content: center;
        }

        .container {
            position: relative;
            margin: 0 auto;
            text-align: center;
        }

        .btnLogin {
            padding: 10px 15px;
            background-color: #E91E63;
            border-radius: 4px;
            color: #fff;
            border: none;
            font-weight: bold;
            text-transform: uppercase;
        }

        .popup {
            width: 400px;
            height: 180px;
            background-color: #fff;
            border-radius: 4px;
            margin: 0 auto;
            z-index: 1000;
            display: none;
            position: relative;
        }

        p {
            font-size: 20px;
            line-height: 100px
        }

        .options {
            position: absolute;
            width: 100%;
            bottom: 0;
            left: 0;
        }

        #close {
            width: 25px;
            height: 25px;
            line-height: 25px;
            font-size: 25px;
            border-radius: 50%;
            float: right;
            cursor: pointer;
            color: #EF5350;
            border: 2px solid #EF9A9A;
        }

        a:first-child {
            float: left;
            width: 50%;
            background-color: #2ECC71;
        }


        a:last-child {
            float: left;
            width: 100%;
            background-color: snow;
        }

        a {
            text-transform: uppercase;
            text-decoration: none;
            color: firebrick;
            padding: 0px 0px;
            text-align: center;
            padding: 0px 25px;
        }

        .cover {
            width: 100%;
            height: 100%;
            position: absolute;
            display: none;
            z-index: 999;
            background-color: rgba(0,0,0, 0.5);
            top: 0;
            left: 0;
        }

        body {
            font-family: Arial;
            font-size: 16px;
            margin: 0;
            background: #2793d2;
            color: #000;
            display: flex;
            align-items: center;
            justify-content: space-around;
            text-align: center;
        }

        .input_container .input-row {
            margin-bottom: 12px;
        }

        .input_container input:not([type="submit"]):focus {
            border-color: #2793d2
        }

        .input_container input:not([type="submit"]) {
            width: 100%;
            margin: 0 0 10px;
            background-color: #d6d6d6;
            color: #000;
            padding: 10px 15px;
            height: 40px;
            line-height: 30px;
            font-size: 20px;
            border-radius: 20px;
            border: 2px solid transparent;
            outline: 0;
            transition: all 0.5s ease-out;
            text-align: center;
        }


        .input_row i {
            position: absolute;
        }

        .input row {
            width: 100%;
            margin-bottom: 10px;
        }

        .icon {
            color: #808080;
            padding: 10px;
            min-width: 40px;
        }

        .input_container {
            width: 50%;
            background-color: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 25px rgba(0,0,0.3);
            border: 10px solid #41b9ff;
            color: #000;
            margin: auto;
        }

            .input_container input[type="submit"] {
                padding: 10px 30px;
                font-size: 18px;
                line-height: 30px;
                height: 50px;
                text-align: center;
                text-transform: uppercase;
                cursor: pointer;
                background-color: white;
                color: #fff;
                border: 0;
                transition: all 0.5s ease-out;
                border-radius: 5px;
                margin-bottom: 20px;
            }

                .input_container input[type="submit"]:hover {
                    background-color: #C0C0C0;
                }

        div .questn {
            font-size: 15px;
            font-weight: bold;
            font-family: Arial;
            float: left;
        }

        .sign_up {
            font-size: 20px;
            float: right;
        }
    </style>

    <div>
        <br />
        <br />
    </div>
    <br />
    <br />
    <div class="popup">
        <span id="close">&times;</span>
        <p>Welcome to StrongHold!</p>
        <div class="=options">
            <a>@Html.ActionLink("CONTINUE", "Entry", "Home")</a>
        </div>
    </div>

    <div class="input_container">
        <br />
        <br />
        <div class="input_row">
            <i class="fa fa-user icon"></i>
            <input type="text" id="txtU" name="txtU" min="0" placeholder="Username" />

        </div>
        <div class="input_row">
            <i class="fa fa-key icon"> </i>

            <input type="password" id="txtP" name="txtP" min="0" placeholder="Password" />
        </div>

        <div class="input_row">
            <i class="fa fa-key icon"> </i>
            <button class="btnLogin">LOGIN</button>
        </div>
        <br />
        <br />

        <div class="cover">

        </div>

        <div class="input_row">

            <div class="questn">
                Don't Have an Account yet?
            </div>

            <div class="sign_up">
                <a>@Html.ActionLink("Signup", "Create", "Home")</a>
            </div>

        </div>
    </div>


    <script src="~/Scripts/jQuery/jquery-3.6.0.min.js"></script>


</body>
</html>

<script>
    $(document).ready(function () {
        $(".btnLogin").on('click', function () {
            $(".cover").fadeIn('slow');
            $(".popup").fadeIn('slow');
        });

        $(".popup").on('click', function () {
            if ($(event.target).is("#close")) {
                $(".cover").fadeOut('slow');
                $(".popup").fadeOut('slow');
            }
        });
        $('.cover').on('click', function () {
            $(".cover").fadeOut('slow');
            $(".popup").fadeOut('slow');
        });
    });
</script>
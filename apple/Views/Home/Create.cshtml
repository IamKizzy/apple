
@{
    ViewBag.Title = "Create";
}



<style>
    body {
        font-family: Arial;
        font-size: 16px;
        margin: 0;
        background: #2793d2;
        color: #ffff;
        display: flex;
        align-items: center;
        justify-content: space-around;
        min-height: 100vh;
    }

    .input_container {
        width: 500px;
        background-color: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 25px rgba(0,0,0.3);
        border: 10px solid #41b9ff;
        color: #000
    }

        .input_container input:not([type="submit"]) {
            width: 100%;
            margin: 0 0 3px;
            background-color: #d6d6d6;
            color: #000;
            padding: 10px 15px;
            height: 50px;
            line-height: 30px;
            font-size: 20px;
            border-radius: 5px;
            border: 2px solid transparent;
            outline: 0;
            transition: all 0.5s ease-out;
        }

            .input_container input:not([type="submit"]):focus {
                border-color: #2793d2
            }

        .input_container .input-row {
            margin-bottom: 12px;
        }

        .input_container input[type="submit"] {
            padding: 10px 30px;
            font-size: 18px;
            line-height: 30px;
            height: 50px;
            text-align: center;
            text-transform: uppercase;
            cursor: pointer;
            background-color: #2793d2;
            color: #fff;
            border: 0;
            transition: all 0.5s ease-out;
            border-radius: 5px;
        }

            .input_container input[type="submit"]:hover {
                background-color: #000
            }

    label.error {
        font-weight: 700;
        display: block;
        color: #f00;
        font-size: 14px;
    }

    * ::-webkit-input-placeholder {
        opacity: 1;
        color: #000;
    }


    .input row {
        width: 100%;
        margin-bottom: 10px;
    }
</style>

<html>
<body>
    <div class="input_container">

        <h2>Sign up</h2>
        <form id="stfAcc" action="../Home/Create" method="post" enctype="multipart/form-data">


            <div class="input-row">
                <input type="text" id="txtF" name="txtF" min="0" placeholder="Firstname" required />

            </div>
            <div class="input-row">
                <input type="text" id="txtL" name="txtL" min="0" placeholder="Lastname" required />

            </div>
            <div class="input-row">
                <input type="text" id="txtU" name="txtU" min="0" placeholder="Username" required />

            </div>
            <div class="input-row">
                <input type="password" id="txtP" name="txtP" min="0" placeholder="Password" required />

            </div>
            <div class="input-row">
                <input type="password" id="txtCP" name="txtCP" min="0" placeholder="Confirm Password" required />

            </div>
            <div class="input-row">
                <input id="btnRegister" type="submit" value="Register" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" />
                <br />

            </div>

        </form>
    </div>

</body>
</html>



